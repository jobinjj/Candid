<com.mxn.soul.flowingdrawer_core.FlowingDrawer xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:edPosition="1"
    app:edMenuSize="260dp"
    app:edMenuBackground="#dddddd">

    <!--content-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="sample.com.jobin.msi.myapplication.MainActivity"
        >

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </android.support.v7.widget.Toolbar>
        <RelativeLayout
            android:id="@+id/rl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <View android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/toolbar_dropshadow"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wallet"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="18dp"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_subtract"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="61dp"
                android:layout_marginRight="61dp"
                />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_menu"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:onClick="dispatchmenu"/>

            <ImageView
                android:id="@+id/candid"
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_candid"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_toolbar"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="800dp">
                    <ImageView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_category"
                        android:layout_marginTop="11dp"
                        android:layout_marginLeft="9dp"/>
                    <HorizontalScrollView
                        android:id="@+id/hscroll"
                        android:layout_below="@+id/category"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:scrollbars="none"
                        android:layout_height="114dp">
                        <RelativeLayout
                            android:layout_width="700dp"
                            android:layout_height="match_parent">
                           <android.support.v7.widget.CardView
                               android:id="@+id/card1"
                               style="@style/CardView.Light"
                               android:layout_width="195dp"
                               app:cardCornerRadius="4dp"

                               android:layout_marginLeft="9dp"
                               android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img1">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/overlay"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ART"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="14dp"
        android:textColor="#fff"
        android:textStyle="bold"/>

</RelativeLayout>

                           </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:id="@+id/card2"
                                style="@style/CardView.Light"
                                android:layout_width="195dp"
                                app:cardCornerRadius="4dp"
                                android:layout_marginLeft="24dp"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@+id/card1">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/img2">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/overlay"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="FOOD"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="14dp"
                                        android:layout_marginLeft="14dp"
                                        android:textColor="#fff"
                                        android:textStyle="bold"/>
                                </RelativeLayout>


                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:id="@+id/card3"
                                android:layout_toRightOf="@+id/card2"
                                android:layout_width="195dp"
                                style="@style/CardView.Light"
                                app:cardCornerRadius="4dp"
                                android:layout_marginLeft="24dp"
                                android:layout_height="match_parent">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/img1">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/overlay"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ART"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="14dp"
                                        android:layout_marginLeft="14dp"
                                        android:textColor="#fff"
                                        android:textStyle="bold"/>
                                </RelativeLayout>

                            </android.support.v7.widget.CardView>


                        </RelativeLayout>
                    </HorizontalScrollView>

                    <RelativeLayout
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:background="#35000000"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/hscroll"/>
<android.support.v7.widget.RecyclerView
    android:layout_marginTop="16dp"
    android:layout_below="@+id/divider"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

    </RelativeLayout>


    <!--menu-->
    <com.mxn.soul.flowingdrawer_core.FlowingMenuLayout
        android:id="@+id/menulayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

       </RelativeLayout>

    </com.mxn.soul.flowingdrawer_core.FlowingMenuLayout>

</com.mxn.soul.flowingdrawer_core.FlowingDrawer>